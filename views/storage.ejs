<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/css/output.css">
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">

</head>

<body class="">
  <div class="h-[100vh] w-full flex">
    <%- include('partials/sidebar') %>
    <div class="flex-1 flex flex-col">
      <%- include('partials/nav') -%>
        <% 
        const { username, email, storage, maxstorage } = user[0]; 
        const initialUsername = username.slice(0, 1).toUpperCase(); 
        const gapToFill = (storage > 0) ? Math.floor((storage / maxstorage) * 100) : 0;
        // Convert GB to MB
        function convertGBtoMB(sizeInGB) {
        const sizeInMB = sizeInGB * 1024; // 1 GB = 1024 MB
        return sizeInMB;
        }

        const storageSizeInMB = convertGBtoMB(storage);

        %>
      <div class="flex-1 w-full p-3 bg-gray-100 overflow-y-auto rounded-l-3xl">
        <div class="py-3 px-5">
          <h1 class="text-2xl font-semibold">Storage Details</h1>
          <div class="my-3">
            <div class="flex items-end gap-1">
              <p class="flex gap-1 text-3xl"><span><%= storageSizeInMB.toFixed(2) %></span>MB </p>
              <p class="flex gap-1">
              <p>of</p>
              <p><span><%= maxstorage %></span><span>GB</span> used</p>
              </p>
            </div>
          </div>
        </div>


        <div class="w-full px-5 mt-2">
          <div class="">

          </div>
          <div class="flex w-full h-[20px]  bg-green-500 rounded-3xl">
            <div id="filler" class="w-[<%= gapToFill %>%] h-full bg-blue-600 rounded-[10px] z-10"></div>
          </div>
          <div class="my-4 flex gap-5">
            <div class="flex gap-1 items-center">
              <div class="h-2 w-2 rounded-full bg-blue-600"></div>
              <p>Disk used</p>
            </div>
            <div class="flex gap-1 items-center">
              <div class="h-2 w-2 rounded-full bg-green-500"></div>
              <p>Free space</p>
            </div>
          </div>

          <div>
            <div class="flex gap-2 items-center py-2 px-6 w-fit rounded-full border-[2px] border-gray-600 cursor-pointer">
              <i class="bx bx-cloud text-2xl text-green-500"></i>
              <p class="font-semibold">Get more storage</p>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
  <script src="/js/actions.js"></script>

</body>

</html>